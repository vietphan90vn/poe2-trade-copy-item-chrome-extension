{
  "manifest_version": 3,
  "name": "PoE2 Trade Item Copy",
  "version": "1.0",
  "description": "An extension to copy items from Path of Exile 2 trade page.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.pathofexile.com/trade2/*"],
      "js": ["poe2-trade-copy.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": []
}
